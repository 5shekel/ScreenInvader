set -x
function printUsage() {
  cat 1>&2 <<EOUSAGE
Run a player command.

player <COMMAND>

available commands are:
  loadVideo <URL>
  loadAnim <URL>
  loadList <URL>

EOUSAGE
  exit 1
}

RUN_DIR="/var/run/player"
CMD_FIFO="$RUN_DIR/cmdfifo"
CMD_LOCK="$RUN_DIR/cmdlock"
CALLBACK="/lounge/bin/player_callback"
PLAYLIST="$RUN_DIR/playlist"
PLAYLIST_TITLES="$RUN_DIR/playlist_titles"
PLAYLIST_IDX="$RUN_DIR/playlist_idx"
MPLAYERSTDIN="$RUN_DIR/mplayerstdin"

function mplayer_start {
  rm -rf "$RUN_DIR"
  mkdir -p "$RUN_DIR"
  mkfifo "$CMD_FIFO";
  while [ 0 ]; do 
    sleep 1; 
   bash -c "/usr/bin/mplayer -idle -input file="$CMD_FIFO" 2>&1 | tee /tmp/mplayer | $CALLBACK &> /tmp/callback"
  done
}

function mplayer_cmd {
  echo "$@" > "$CMD_FIFO"
}

function showText() {
  (
    flock -x 200
    text="$1"
    duration="$2"
    [ -z "$duration" ] && duration=1000000000 
    mplayer_cmd "osd_show_text \"$text\" $duration 1"
  ) 200>$CMD_LOCK
}

function hideText() {
  (
    flock -x 200
    mplayer_cmd "osd_show_text \"\" $duration 0 0"
  ) 200>$CMD_LOCK
}


function jump() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    mplayer_cmd "loadlist  \"$PLAYLIST\""
    [ "$1" -gt 0 ] && mplayer_cmd "pt_step $1"
    echo "$1" >  "$PLAYLIST_IDX"
  ) 200>$CMD_LOCK
}

function isQueueMode() {
  [ -f /var/run/player/queuemode ] && return 0;
  return 1;
}

function toggleQueueMode() {
  if isQueueMode; then
    rm /var/run/player/queuemode
  else
   touch /var/run/player/queuemode
  fi
}

function playlistAdd() {
  playlistEnqueue "$1" "$2"

  if ! isQueueMode; then
    mplayer_cmd "loadlist  \"$PLAYLIST\""
    echo $[ `wc -l "$PLAYLIST" | cut -d" " -f1` - 1] > "$PLAYLIST_IDX"
    idx="`cat $PLAYLIST_IDX`"
    [ $idx -gt 0 ] && mplayer_cmd "pt_step $idx"
  fi
}

function playlistEnqueue() {
  path="$1"
  title="$2"
  [ -z "$title" ] && title="(no title)"
  echo "$path" >> "$PLAYLIST"
  echo "$title" >> "$PLAYLIST_TITLES"
}

function loadStdin() {
  wmctrl -r MPlayer -b remove,hidden
  rm -f "$MPLAYERSTDIN"
  mkfifo "$MPLAYERSTDIN"
  mplayer_cmd "loadfile \"$MPLAYERSTDIN\""
  cat > "$MPLAYERSTDIN"
  mplayer_cmd "pt_step `cat "$PLAYLIST_IDX"`"
}

function loadVideo() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    playlistAdd "$1" "$2"
  ) 200>$CMD_LOCK
}

function enqueueVideo() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    playlistAdd "$1" "$2"
  ) 200>$CMD_LOCK
}

function loadList() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    mplayer_cmd "loadlist $1"
  ) 200>$CMD_LOCK
}

function loadAnim() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    playlistAdd "$1" "$2"
  ) 200>$CMD_LOCK
}

function loadAudio() {
  (
    flock -x 200
    wmctrl -r MPlayer -b add,hidden
    playlistAdd "$1" "$2"
  ) 200>$CMD_LOCK
}

function previous() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    echo `$[ `cat "$PLAYLIST_IDX"` -  1 ]` > "$PLAYLIST_IDX"
    mplayer_cmd "pt_step -1" 
  ) 200>$CMD_LOCK
}

function next() {
  (
    flock -x 200
    wmctrl -r MPlayer -b remove,hidden
    idx=`cat "$PLAYLIST_IDX"`
    echo "$[ $idx  +  1 ]" > "$PLAYLIST_IDX"
    mplayer_cmd "pt_step 1" 
  ) 200>$CMD_LOCK
}

function forward() {
  (
    flock -x 200
    mplayer_cmd "seek +10" 
  ) 200>$CMD_LOCK
}

function forwardMore() {
  (
    flock -x 200
    mplayer_cmd "seek +300"
  ) 200>$CMD_LOCK
}

function rewind() {
  (
    flock -x 200
    mplayer_cmd "seek -10" 
  ) 200>$CMD_LOCK
}

function rewindMore() {
  (
    flock -x 200
    mplayer_cmd "seek -300"
  ) 200>$CMD_LOCK
}

function pause() {
  (
    flock -x 200
    mplayer_cmd "pause"
  ) 200>$CMD_LOCK
}

function stop() {
  (
    flock -x 200
    mplayer_cmd "stop"
  ) 200>$CMD_LOCK
}

function hide() {
  (
    flock -x 200
    mplayer_cmd "stop"
    wmctrl -r MPlayer -b add,hidden
  ) 200>$CMD_LOCK
}

function osd() {
  (
    flock -x 200
    mplayer_cmd "osd 1" 
  ) 200>$CMD_LOCK
}

function subtitle() {
  (
    flock -x 200
    mplayer_cmd "sub_visibility 1" 
  ) 200>$CMD_LOCK
}

"$1" "$2" "$3" "$4" "$5"
