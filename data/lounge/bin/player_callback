set -x
SOTRACK="DEMUXER: ==> Found"
EOTRACK="DEMUXER: DEMUXER: freeing"
PATH_CHANGED="GLOBAL: ANS_path="
export PATH=$PATH:/lounge/bin

function contains() {
 if [[ "$1" == *"$2"* ]]; then 
   return 0
 else
   return 1
 fi
}

function path_changed() {
  path="`echo $1 | cut -d'=' -f2-`"
  echo "$path" > /var/run/player/currentpath
  if [ "$path" == "(null)" ]; then
    idx="`cat "/var/run/player/playlist_idx"`"
    len="`wc -l /var/run/player/playlist`"
    if [ $idx -gt $len ]; then
      player jump $idx
    else
      player hide
      mpc play
    fi
  fi    
}

function sotrack() {
  mpc pause
  player mplayer_cmd "get_property path"
}

cat | while read line; do
   contains "$line" "$EOTRACK" && player mplayer_cmd "get_property path" 
   contains "$line" "$PATH_CHANGED" && path_changed "$line"
   contains "$line" "$SOTRACK" && sotrack
done
