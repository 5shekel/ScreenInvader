#!/bin/bash

. /var/www/cgi-bin/initrequest "text/html"

./clean

COOKIE_FILE=/var/tmp/youtube-dl-cookies.txt
[ -z "$QUERY_STRING" ] && QUERY_STRING=$1;

mpc pause &> /dev/null
`mplayer -fs -cookies -cookies-file ${COOKIE_FILE} $(youtube-dl -g -f18 --cookies ${COOKIE_FILE} "$QUERY_STRING"); mpc play` &> /dev/null &

disown
